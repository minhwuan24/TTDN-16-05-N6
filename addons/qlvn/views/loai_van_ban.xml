<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <data>

    <!-- FORM VIEW -->
    <record id="view_loai_van_ban_form" model="ir.ui.view">
      <field name="name">qlvn.loai_van_ban.form</field>
      <field name="model">qlvn.loai_van_ban</field>
      <field name="arch" type="xml">
        <form string="Loại văn bản">
          <sheet>
            <group col="4">
              <field name="ma_loai_van_ban"/>
              <field name="ten_loai_van_ban"/>
              <field name="nhan_vien_id"/> <!-- ✅ LIÊN KẾT NHÂN SỰ -->
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_loai_van_ban_tree" model="ir.ui.view">
      <field name="name">qlvn.loai_van_ban.tree</field>
      <field name="model">qlvn.loai_van_ban</field>
      <field name="arch" type="xml">
        <tree string="Loại văn bản">
          <field name="ma_loai_van_ban"/>
          <field name="ten_loai_van_ban"/>
          <field name="nhan_vien_id"/> <!-- ✅ -->
        </tree>
      </field>
    </record>

    <!-- ACTION -->
    <record id="action_loai_van_ban" model="ir.actions.act_window">
      <field name="name">Loại văn bản</field>
      <field name="res_model">qlvn.loai_van_ban</field>
      <field name="view_mode">tree,form</field>
    </record>

  </data>
</odoo>
