<odoo>

    <!-- TREE VIEW -->
    <record id="view_van_ban_di_tree" model="ir.ui.view">
        <field name="name">qlvn.van_ban_di.tree</field>
        <field name="model">qlvn.van_ban_di</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="so_van_ban"/>
                <field name="customer_id"/>
                <field name="loai_van_ban_id"/>
                <field name="ngay_ban_hanh"/>
                <field name="noi_nhan"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_van_ban_di_form" model="ir.ui.view">
        <field name="name">qlvn.van_ban_di.form</field>
        <field name="model">qlvn.van_ban_di</field>
        <field name="arch" type="xml">
            <form string="Văn bản đi">

                <header>
                    <button name="action_sign"
                            type="object"
                            string="Ký văn bản"
                            states="draft"
                            class="btn-primary"/>

                    <button name="action_issue"
                            type="object"
                            string="Ban hành"
                            states="signed"
                            class="btn-success"/>

                    <button name="action_archive"
                            type="object"
                            string="Lưu trữ"
                            states="issued"
                            class="btn-secondary"/>

                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="draft,signed,issued,archived"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"
                               attrs="{'readonly': [('state','in',['issued','archived'])]}"/>

                        <field name="so_van_ban"
                               attrs="{'readonly': [('state','!=','draft')]}"/>

                        <field name="customer_id"
                               attrs="{'readonly': [('state','!=','draft')]}"/>

                        <field name="loai_van_ban_id"
                               attrs="{'readonly': [('state','!=','draft')]}"/>

                        <field name="ngay_ban_hanh"
                               attrs="{'readonly': [('state','!=','draft')]}"/>

                        <field name="noi_nhan"
                               attrs="{'readonly': [('state','!=','draft')]}"/>

                        <field name="nguoi_ky_id"
                               attrs="{'readonly': [('state','!=','draft')]}"/>

                        <field name="file_dinh_kem"
                               filename="ten_file"
                               attrs="{'readonly': [('state','in',['issued','archived'])]}"/>

                        <field name="mo_ta"
                               attrs="{'readonly': [('state','in',['issued','archived'])]}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- ACTION -->
    <record id="action_van_ban_di" model="ir.actions.act_window">
        <field name="name">Văn bản đi</field>
        <field name="res_model">qlvn.van_ban_di</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('active','=',True)]</field>
    </record>
    <record id="action_van_ban_di_archive" model="ir.actions.act_window">
    <field name="name">Văn bản lưu trữ</field>
    <field name="res_model">qlvn.van_ban_di</field>
    <field name="domain">[('active','=',False)]</field>
    <field name="view_mode">tree,form</field>
</record>

</odoo>
